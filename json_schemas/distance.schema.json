{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/bnjmn21/realrocket/refs/heads/main/json_schemas/distance.schema.json",
  "title": "Distance",
  "description": "A distance value",
  "type": "object",
  "properties": {
    "value": {
      "description": "The value",
      "type": "number",
      "default": 1
    },
    "type": {
      "enum": [
        "realrocket:meter",
        "realrocket:kilometer",
        "realrocket:au",
        "realrocket:light_year",
        "realrocket:parsec"
      ]
    }
  },
  "required": ["type"]
}