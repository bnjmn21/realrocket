{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/bnjmn21/realrocket/refs/heads/main/json_schemas/time.schema.json",
  "title": "Time",
  "description": "A time value",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "value": {
          "description": "The value",
          "type": "number",
          "default": 1
        },
        "type": { "$ref": "#/$defs/type" }
      },
      "required": ["type"]
    },
    { "$ref": "#/$defs/type" }
  ],
  "$defs": {
    "type": {
      "enum": [
        "realrocket:second",
        "realrocket:minute",
        "realrocket:hour",
        "realrocket:day",
        "realrocket:month",
        "realrocket:year"
      ]
    }
  }
}