{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/bnjmn21/realrocket/refs/heads/main/json_schemas/temperature.schema.json",
  "title": "Temperature",
  "description": "A temperature value",
  "type": "object",
  "properties": {
    "value": {
      "description": "The value",
      "type": "number",
      "default": 1
    },
    "type": {
      "enum": [
        "realrocket:kelvin",
        "realrocket:celsius",
        "realrocket:fahrenheit"
      ]
    }
  },
  "required": ["type"]
}